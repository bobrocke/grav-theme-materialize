{% if pagination|length > 1 %}

	<ul class="pagination">
		{% if pagination.hasPrev %}
			<li class="waves-effect"><a href="{{ base_url }}{{ pagination.params }}{{ pagination.prevUrl }}"><i
						class="mdi mdi-chevron-left"></i></a></li>
		{% else %}
			<li class="disabled"><i class="mdi mdi-chevron-left"></i></li>
		{% endif %}

		{% for paginate in pagination %}
			{% if paginate.isCurrent %}
					<li class="active">{{ paginate.number }}</li>
			{% elseif paginate.isInDelta %}
					<li class="waves-effect"><a href="{{ base_url }}{{ pagination.params }}{{ paginate.url }}">{{ paginate.number }}</a></li>
			{% elseif paginate.isDeltaBorder %}
					<li><span>&hellip;</span></li>
			{% endif %}
		{% endfor %}

		{% if pagination.hasNext %}
			<li class="waves-effect"><a href="{{ base_url }}{{ pagination.params }}{{ pagination.nextUrl }}"><i
						class="mdi mdi-chevron-right"></i></a></li>
		{% else %}
			<li class="disabled"><i class="mdi mdi-chevron-right"></i></li>
		{% endif %}
	</ul>

{% endif %}
