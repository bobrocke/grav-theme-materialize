<div class="modular-row features {{ page.header.class}}">
	<div class="container center">
		{{ content }}
		<div class="feature-items row">
			{% for feature in page.header.features %}
				{% if page.header.class == "big" %}
					<div class="feature col s12 m6 l6">
				{% else %}
					<div class="feature col s6 l3">
				{% endif %}
					{% if feature.icon %}
						<i class="mdi mdi-{{ feature.icon }}"></i>
						<div class="feature-content push">
					{% else %}
						<div class="feature-content">
					{% endif %}

					{% if feature.header %}
						<h4>{{ feature.header }}</h4>
					{% endif %}

					{% if feature.text %}
						<p>{{ feature.text }}</p>
					{% endif %}
						</div>
				</div>
			{% endfor %}
		</div>
	</div>

	<div style="clear:both">

	</div>
</div>
