<div class="modular-row callout container">
	<div class="row">
		{% set image = page.media.images|first %}
		{% if image %}
			<div class="col s12 l6">
				{{ image.cropResize(400,400).html('Screenshot', 'centered responsive-img') }}
			</div>
			<div class="col s12 l6">
				{{ content }}
			</div>
		{% else %}
			<div class="col s12">
				{{ content }}
			</div>
		{% endif %}
	</div>

	<div style="clear:both"></div>
</div>
